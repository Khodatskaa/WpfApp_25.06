<Window x:Class="WpfApp_25._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_25._06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Server Status:" FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="txtServerStatus" Text="UDP Server is not running." Margin="0 10"/>
            <Button Content="Start Server" Click="StartServer_Click" Margin="0 10"/>
            <Button Content="Stop Server" Click="StopServer_Click" Margin="0 10"/>
            <TextBlock Text="Connected Clients:" FontSize="16" FontWeight="Bold" Margin="0 10"/>
            <ListBox x:Name="lstClients" HorizontalContentAlignment="Stretch"/>
        </StackPanel>
    </Grid>
</Window>
