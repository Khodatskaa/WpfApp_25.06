<Window x:Class="WpfApp_25._06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_25._06"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBox x:Name="txtServerIP" PlaceholderText="Server IP Address" Margin="0 0 0 10"/>
            <TextBox x:Name="txtServerPort" PlaceholderText="Server Port" Margin="0 0 0 10"/>
            <TextBox x:Name="txtMessageToSend" PlaceholderText="Message to Send" Margin="0 0 0 10"/>
            <Button Content="Send Message" Click="SendMessage_Click" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtReceivedMessage" TextWrapping="Wrap" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</Window>
